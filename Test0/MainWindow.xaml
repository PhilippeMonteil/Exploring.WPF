<Window x:Class="Test0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test0"
        xmlns:lib="clr-namespace:ItemsControlLib;assembly=ItemsControlLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type=lib:TodoItemListTest}">

    <Window.DataContext>
        <lib:TodoItemListTest/>
    </Window.DataContext>

    <StackPanel Background="DarkGray">
        <ListBox ItemsSource="{Binding}" Background="LightGray" TextBlock.Foreground="White">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Background="Red" >
                        <TextBlock Text="{Binding Title}" Margin="8" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>

</Window>
