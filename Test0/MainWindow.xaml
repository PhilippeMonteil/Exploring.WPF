<Window x:Class="Test0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test0"
        xmlns:lib="clr-namespace:ItemsControlLib;assembly=ItemsControlLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type=lib:TodoItemListTest}">

    <Window.Resources>
    </Window.Resources>

    <StackPanel Background="DarkGray">
        <ListBox ItemsSource="{Binding}" Background="LightGray">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding XPath=ID/@name}" Margin="8"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Width="200" Height="200" Content="{Binding XPath=ID/@name}"/>
    </StackPanel>

</Window>
