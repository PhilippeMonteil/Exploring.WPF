<Application x:Class="TestSkinning.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TestSkinning"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <local:SkinResourceDictionary RedSource="/Resources/RedColors.xaml" BlueSource="/Resources/BlueColors.xaml"/>
                <local:SkinResourceDictionary RedSource="/Resources/RedSizes.xaml" BlueSource="/Resources/BlueSizes.xaml"/>
                <ResourceDictionary Source="/Resources/MyBorderStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
        
    </Application.Resources>
</Application>
