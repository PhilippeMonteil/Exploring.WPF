<Window x:Class="TestCustomPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCustomPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
    
    <local:RibbonPanel Height="Auto"
                       Background="DarkGray" 
                       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8"
                       ClipToBounds="True">

        <local:RibbonPanel.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Padding" Value="8" />
                <Setter Property="Margin" Value="2" />
            </Style>
        </local:RibbonPanel.Resources>
        
        <Rectangle Fill="Red" Height="100" Width="300" Margin="4"/>
        <Rectangle Fill="Blue" Width="200" Margin="4"/>
        <Rectangle Fill="Green" Width="100" Margin="4"/>
        <Rectangle Fill="DarkRed" Width="280" Margin="4"/>
        <Rectangle Fill="DarkBlue" Width="180" Margin="4"/>
        <Rectangle Fill="DarkGreen" Width="80" Margin="4"/>

        <!--<Button>Button0</Button>
        <Button>Button1__</Button>
        <Button>Button2____</Button>
        <Button>Button3______</Button>
        <Button>Button4________</Button>-->

    </local:RibbonPanel>

