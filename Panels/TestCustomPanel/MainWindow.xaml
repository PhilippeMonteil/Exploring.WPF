<Window x:Class="TestCustomPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCustomPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto">
    <local:RibbonPanel Width="800" Height="800" Background="DarkGray" 
                       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8"
                       ClipToBounds="True">
        
        <Rectangle Fill="Red" Width="300" Height="200" Margin="4"/>
        <Rectangle Fill="Blue" Width="200" Height="200" Margin="4"/>
        <Rectangle Fill="Green" Width="100" Height="100" Margin="4"/>
        <Rectangle Fill="DarkRed" Width="300" Height="200" Margin="4"/>
        <Rectangle Fill="DarkBlue" Width="200" Height="200" Margin="4"/>
        <Rectangle Fill="DarkGreen" Width="100" Height="100" Margin="4"/>

    </local:RibbonPanel>
</Window>
